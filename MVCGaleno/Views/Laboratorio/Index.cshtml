@model IEnumerable<DocumentoViewModel>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Documento</th>
                <th>Médico</th>
                <th>Afiliado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var laboratorio in Model)
            {
                <tr>
                    <td>
                        <a href="@laboratorio.RutaArchivo" target="_blank">
                            Ver Estudio
                        </a>
                    </td>
                    <td>@laboratorio.MedicoNombre</td> <!-- Nombre del médico -->
                    <td>@laboratorio.AfiliadoNombre</td> <!-- Nombre del afiliado -->
                    <td>
                        <!-- Aquí puedes agregar botones de acción, por ejemplo, para eliminar o ver detalles -->
                        <a href="@Url.Action("Eliminar", new { id = laboratorio.IdLaboratorio })" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay documentos cargados para este médico.</p>
}

