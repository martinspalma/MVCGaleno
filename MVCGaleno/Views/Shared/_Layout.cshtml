<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCGaleno</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f7f8fa;
            color: #333;
            font-family: 'Inter', sans-serif; 
        }

        .navbar {
            background-color: #0056b3; 
            padding: 0.5rem 1rem;
        }

        .navbar-brand {
            color: #fff !important;
            font-size: 1.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 2px;
            transition: all 0.3s ease-in-out;
        }

            .navbar-brand:hover {
                color: #f8f9fa !important;
                transform: scale(1.1);
            }

        .navbar-nav .nav-link {
            color: #f8f9fa;
            padding: 0.5rem 1rem;
            font-weight: 500;
            transition: all 0.3s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                color: #d1d8e0;
                transform: scale(1.05);
            }

                .navbar-nav .nav-link.text-laboratorio:hover {
                    color: #138496; 
                }

        .navbar-toggler {
            border-color: #f8f9fa;
        }

        .navbar-toggler-icon {
            background-color: #f8f9fa;
        }

        footer {
            background-color: #003366; 
            color: #fff;
            padding: 2rem 0;
        }

            footer a {
                color: #fff;
                text-decoration: none;
            }

                footer a:hover {
                    color: #f8f9fa;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <!-- Header con Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <!-- Nombre de la obra social -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVCGaleno</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Opciones del menú -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Turno" asp-action="Index">Turno</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Afiliado" asp-action="Index">Afiliado</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PrestadorMedico" asp-action="Index">Prestador Medico</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Citas" asp-action="Index">Citas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-laboratorio" asp-area="" asp-controller="Laboratorio" asp-action="Index">Laboratorio</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenido principal -->
    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <p>&copy; 2024 - MVCGaleno</p>
            <p>Teléfono: +54 11 1234-5678 | Email: contacto@mvcgaleno.com</p>
            <p><a href="mailto:contacto@mvcgaleno.com">Contáctanos</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
