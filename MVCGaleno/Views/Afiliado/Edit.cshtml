@model MVCGaleno.Models.CreateViewModel

@{
    ViewData["Title"] = "Editar Afiliado";
}

<div class="container mt-5">
    <!-- Título principal -->
    <h1 class="text-center text-primary mb-4">Editar Afiliado</h1>
    <hr />

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>
                    <input type="hidden" asp-for="IdAfiliado" />

                    <!-- Nombre y Apellido -->
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Nombre Completo</label>
                        <div class="row">
                            <div class="col">
                                <label for="Nombre" class="form-label small">Nombre</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label for="Apellido" class="form-label small">Apellido</label>
                                <input asp-for="Apellido" class="form-control" placeholder="Ingrese el apellido" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- DNI -->
                    <div class="form-group mb-3">
                        <label asp-for="Dni" class="form-label fw-bold">DNI</label>
                        <input asp-for="Dni" class="form-control" placeholder="Ingrese el DNI" />
                        <span asp-validation-for="Dni" class="text-danger"></span>
                    </div>

                    <!-- Tipo de Plan -->
                    <div class="form-group mb-3">
                        <label asp-for="tipoPlan" class="form-label fw-bold">Tipo de Plan</label>
                        <select asp-for="tipoPlan" class="form-control" asp-items="Html.GetEnumSelectList<TipoPlan>()">
                            <option selected="selected" value="">Seleccione un tipo de plan</option>
                        </select>
                        <span asp-validation-for="tipoPlan" class="text-danger"></span>
                    </div>

                    <!-- Correo Electrónico -->
                    <div class="form-group mb-3">
                        <label asp-for="mail" class="form-label fw-bold">Correo Electrónico</label>
                        <input asp-for="mail" class="form-control" placeholder="Ingrese el correo electrónico" />
                        <span asp-validation-for="mail" class="text-danger"></span>
                    </div>

                    <!-- Teléfono -->
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Número de Teléfono</label>
                        <div class="row">
                            <div class="col-md-4">
                                <label for="CodigoArea" class="form-label small">Código de Área</label>
                                <input asp-for="CodigoArea" class="form-control" placeholder="XXX" />
                                <span asp-validation-for="CodigoArea" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label for="Caracteristica" class="form-label small">Característica</label>
                                <input asp-for="Caracteristica" class="form-control" placeholder="XXXX" />
                                <span asp-validation-for="Caracteristica" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label for="Numero" class="form-label small">Número</label>
                                <input asp-for="Numero" class="form-control" placeholder="XXXX" />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Botones -->
                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Guardar" class="btn btn-primary btn-sm me-3" />
                        <a asp-action="Index" class="btn btn-light btn-sm">Volver a la lista</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
