@model MVCGaleno.Models.CreateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Afiliado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAfiliado" />
            <div class="form-group">
                <label class="control-label">NombreCompleto</label>
                <div class="d-flex align-items-center">
                    <div class="me-2">
                        <label for="Nombre" class="form-label small"> Nombre </label>
                        <input asp-for="Nombre" class="form-control" style="width: 100px;" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div>
                        <label for="Apellido" class="form-label small">Apellido</label>
                        <input asp-for="Apellido" class="form-control" style="width: 150px;" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Dni" class="control-label"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoPlan" class="control-label font-weight-bold"></label>
                <select asp-for="tipoPlan" class="form-control" asp-items="Html.GetEnumSelectList<TipoPlan>()">
                    <option selected="selected" value="">Seleccione un tipo de plan</option>
                </select>
                <span asp-validation-for="tipoPlan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mail" class="control-label"></label>
                <input asp-for="mail" class="form-control" />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Número de Teléfono</label>
                <div class="d-flex align-items-center">
                    <div class="me-2">
                        <label for="CodigoArea" class="form-label small">Código de Área</label>
                        <input asp-for="CodigoArea" class="form-control" style="width: 100px;" placeholder="XXX" />
                        <span asp-validation-for="CodigoArea" class="text-danger"></span>
                    </div>
                    <div>
                        <label for="Caracteristica" class="form-label small">Caracteristica</label>
                        <input asp-for="Caracteristica" class="form-control" style="width: 150px;" placeholder="XXXX" />
                        <span asp-validation-for="Caracteristica" class="text-danger"></span>
                    </div>
                    <div>
                        <label for="Numero" class="form-label small">Número</label>
                        <input asp-for="Numero" class="form-control" style="width: 150px;" placeholder="XXXX" />
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
