@model MVCGaleno.Models.CreateViewModel

@{
    ViewData["Title"] = "Editar Afiliado";
}

<div class="container mt-5">
    <!-- Título de la página -->
    <h1 class="text-center text-primary mb-4">
        <i class="fas fa-user-edit me-2"></i>Editar Afiliado
    </h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Formulario -->
            <form asp-action="Edit" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdAfiliado" />

                <!-- Nombre Completo -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre Completo</label>
                    <div class="d-flex gap-3">
                        <div>
                            <label for="Nombre" class="form-label small">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div>
                            <label for="Apellido" class="form-label small">Apellido</label>
                            <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- DNI -->
                <div class="mb-3">
                    <label asp-for="Dni" class="form-label fw-bold">DNI</label>
                    <input asp-for="Dni" class="form-control" placeholder="Ingrese el DNI" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>

                <!-- Tipo de Plan -->
                <div class="mb-3">
                    <label asp-for="tipoPlan" class="form-label fw-bold">Tipo de Plan</label>
                    <select asp-for="tipoPlan" class="form-select" asp-items="Html.GetEnumSelectList<TipoPlan>()">
                        <option selected value="">Seleccione un tipo de plan</option>
                    </select>
                    <span asp-validation-for="tipoPlan" class="text-danger"></span>
                </div>

                <!-- Correo Electrónico -->
                <div class="mb-3">
                    <label asp-for="mail" class="form-label fw-bold">Correo Electrónico</label>
                    <input asp-for="mail" class="form-control" placeholder="ejemplo@correo.com" />
                    <span asp-validation-for="mail" class="text-danger"></span>
                </div>

                <!-- Teléfono -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Número de Teléfono</label>
                    <div class="d-flex gap-3">
                        <div>
                            <label for="CodigoArea" class="form-label small">Código de Área</label>
                            <input asp-for="CodigoArea" class="form-control" placeholder="XXX" />
                            <span asp-validation-for="CodigoArea" class="text-danger"></span>
                        </div>
                        <div>
                            <label for="Caracteristica" class="form-label small">Característica</label>
                            <input asp-for="Caracteristica" class="form-control" placeholder="XXXX" />
                            <span asp-validation-for="Caracteristica" class="text-danger"></span>
                        </div>
                        <div>
                            <label for="Numero" class="form-label small">Número</label>
                            <input asp-for="Numero" class="form-control" placeholder="XXXX" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
