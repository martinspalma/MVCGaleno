@model IEnumerable<MVCGaleno.Models.Afiliado>

@{
    ViewData["Title"] = "Listado de Afiliados";
}

<div class="container mt-5">
    <!-- Título -->
    <h1 class="text-center text-primary mb-4">Listado de Afiliados</h1>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Afiliado
        </a>
    </div>

    <!-- Tabla -->
    <table class="table table-striped table-bordered table-hover shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Afiliado</th>
                <th>DNI</th>
                <th>Plan</th>
                <th>Mail</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>Sr/a. @Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Dni)</td>
                    <td>@Html.DisplayFor(modelItem => item.tipoPlan)</td>
                    <td>@Html.DisplayFor(modelItem => item.mail)</td>
                    <td>@Html.DisplayFor(modelItem => item.telefono)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdAfiliado" class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdAfiliado" class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdAfiliado" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>


</div>
