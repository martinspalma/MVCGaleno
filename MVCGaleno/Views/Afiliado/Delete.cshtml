@model MVCGaleno.Models.Afiliado

@{
    ViewData["Title"] = "Eliminar Afiliado";
}

<div class="container mt-5">
    <!-- Título -->
    <h1 class="text-center text-danger mb-4">Eliminar Afiliado</h1>

    <!-- Mensaje de confirmación -->
    <h3 class="text-center text-warning">¿Estás seguro de que deseas eliminar este afiliado?</h3>
    <p class="text-center text-muted">Esta acción no se puede deshacer.</p>
    <hr />

    <!-- Detalles del prestador medico -->
    <div class="card shadow p-4 mb-4">
        <h4 class="text-primary">Detalles del Afiliado</h4>
        <dl class="row mt-3">

            <!-- Nombre Completo -->
            <dt class="col-sm-4 text-secondary">Nombre</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCompleto)</dd>

            <!-- DNI -->
            <dt class="col-sm-4 text-secondary">Documento</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Dni)</dd>

            <!-- Plan -->
            <dt class="col-sm-4 text-secondary">Plan</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.tipoPlan)</dd>

            <!-- Correo Electrónico -->
            <dt class="col-sm-4 text-secondary">Correo Electrónico</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.mail)</dd>

            <!-- Teléfono -->
            <dt class="col-sm-4 text-secondary">Teléfono</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.telefono)</dd>

        </dl>
    </div>

    <!-- Botones de acción -->
    <div class="text-center">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="IdAfiliado" />
            <button type="submit" class="btn btn-danger btn-sm me-3">
                <i class="bi bi-trash3"></i> Eliminar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
</div>
