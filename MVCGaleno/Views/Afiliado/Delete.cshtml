@model MVCGaleno.Models.Afiliado

@{
    ViewData["Title"] = "Eliminar Afiliado";
}

<div class="container mt-5">
    <!-- Título principal -->
    <h1 class="text-center text-danger mb-4">
        <i class="fas fa-exclamation-triangle me-2"></i>Eliminar Afiliado
    </h1>

    <!-- Confirmación -->
    <p class="text-center text-muted fs-5">
        ¿Está seguro de que desea eliminar este registro? Esta acción no se puede deshacer.
    </p>
    <hr class="mb-5" />

    <!-- Detalles del afiliado -->
    <div class="card shadow-lg p-4">
        <h4 class="card-title text-primary mb-3">
            <i class="fas fa-user me-2"></i>Detalles del Afiliado
        </h4>
        <dl class="row">
            <dt class="col-sm-4">Nombre Completo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCompleto)</dd>

            <dt class="col-sm-4">DNI</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Dni)</dd>

            <dt class="col-sm-4">Tipo de Plan</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.tipoPlan)</dd>

            <dt class="col-sm-4">Correo Electrónico</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.mail)</dd>

            <dt class="col-sm-4">Teléfono</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.telefono)</dd>
        </dl>
    </div>

    <!-- Acciones -->
    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="IdAfiliado" />
            <button type="submit" class="btn btn-danger btn-lg me-2">
                <i class="fas fa-trash-alt me-1"></i>Eliminar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left me-1"></i>Volver a la lista
        </a>
    </div>
</div>
