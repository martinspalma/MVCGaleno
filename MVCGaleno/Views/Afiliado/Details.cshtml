@model MVCGaleno.Models.Afiliado

@{
    ViewData["Title"] = "Detalles del Afiliado";
}

<div class="container mt-5">
    <!-- Título Principal -->
    <h1 class="text-center text-primary mb-4">Detalles del Afiliado</h1>
    <hr />

    <!-- Información del Afiliado -->
    <div class="card shadow p-4">
        <h4 class="text-secondary mb-4">Información Personal</h4>
        <dl class="row">
            <dt class="col-sm-4 text-muted">Nombre Completo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCompleto)</dd>

            <dt class="col-sm-4 text-muted">DNI</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Dni)</dd>

            <dt class="col-sm-4 text-muted">Tipo de Plan</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.tipoPlan)</dd>

            <dt class="col-sm-4 text-muted">Correo Electrónico</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.mail)</dd>

            <dt class="col-sm-4 text-muted">Teléfono</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.telefono)</dd>
        </dl>
    </div>

    <!-- Botones de Acción -->
    <div class="text-center mt-4">
        <!-- Botón Editar -->
        <a asp-action="Edit" asp-route-id="@Model?.IdAfiliado" class="btn btn-primary btn-sm me-3">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <!-- Botón Volver -->
        <a asp-action="Index" class="btn btn-light btn-sm">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
</div>
