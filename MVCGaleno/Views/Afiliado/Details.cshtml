@model MVCGaleno.Models.Afiliado

@{
    ViewData["Title"] = "Detalles del Afiliado";
}

<div class="container mt-5">
    <!-- Título principal -->
    <h1 class="text-center text-primary mb-4">Detalles del Afiliado</h1>
    <hr />

    <!-- Información del afiliado -->
    <div class="card shadow p-4">
        <h4 class="text-secondary mb-4">Información Personal</h4>
        <dl class="row">
            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.NombreCompleto)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCompleto)</dd>

            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Dni)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Dni)</dd>

            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.tipoPlan)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.tipoPlan)</dd>

            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.mail)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.mail)</dd>

            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.telefono)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.telefono)</dd>
        </dl>
    </div>

    <!-- Botones de acción -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.IdAfiliado" class="btn btn-warning btn-lg me-3">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
</div>
