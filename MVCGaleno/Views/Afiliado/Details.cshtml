@model MVCGaleno.Models.Afiliado

@{
    ViewData["Title"] = "Detalles del Afiliado";
}

<div class="container mt-5">
    <!-- Título principal -->
    <h1 class="text-center text-primary mb-4">
        <i class="fas fa-user-circle me-2"></i>Detalles del Afiliado
    </h1>
    <hr />

    <!-- Tarjeta de detalles -->
    <div class="card shadow-lg p-4">
        <h4 class="card-title text-secondary">
            <i class="fas fa-id-card me-2"></i>Información Personal
        </h4>
        <dl class="row mt-3">
            <dt class="col-sm-4">Nombre Completo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCompleto)</dd>

            <dt class="col-sm-4">DNI</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Dni)</dd>

            <dt class="col-sm-4">Tipo de Plan</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.tipoPlan)</dd>

            <dt class="col-sm-4">Correo Electrónico</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.mail)</dd>

            <dt class="col-sm-4">Teléfono</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.telefono)</dd>
        </dl>
    </div>

    <!-- Botones de acción -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.IdAfiliado" class="btn btn-warning btn-lg me-2">
            <i class="fas fa-edit me-1"></i>Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left me-1"></i>Volver a la lista
        </a>
    </div>
</div>
