@model MVCGaleno.Models.CreateViewModel

@{
    ViewData["Title"] = "Crear Afiliado";
}

<div class="container mt-5">
    <!-- Título principal -->
    <h1 class="text-center text-primary mb-4">
        <i class="fas fa-user-plus me-2"></i>Registrar Nuevo Afiliado
    </h1>

    <!-- Breve descripción -->
    <p class="text-center text-muted">Complete los campos a continuación para agregar un nuevo afiliado al sistema.</p>
    <hr class="mb-5" />

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <form asp-action="Create" class="card shadow p-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                <!-- Nombre Completo -->
                <div class="form-group mb-3">
                    <label class="fw-bold">Nombre Completo</label>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label for="Nombre" class="form-label small">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label for="Apellido" class="form-label small">Apellido</label>
                            <input asp-for="Apellido" class="form-control" placeholder="Ingrese el apellido" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- DNI -->
                <div class="form-group mb-3">
                    <label asp-for="Dni" class="fw-bold">DNI</label>
                    <input asp-for="Dni" class="form-control" placeholder="Ingrese el DNI" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>

                <!-- Tipo de Plan -->
                <div class="form-group mb-3">
                    <label asp-for="tipoPlan" class="fw-bold">Tipo de Plan</label>
                    <select asp-for="tipoPlan" class="form-control" asp-items="Html.GetEnumSelectList<TipoPlan>()">
                        <option selected value="">Seleccione un tipo de plan</option>
                    </select>
                    <span asp-validation-for="tipoPlan" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group mb-3">
                    <label asp-for="mail" class="fw-bold">Correo Electrónico</label>
                    <input asp-for="mail" class="form-control" placeholder="Ingrese el correo electrónico" />
                    <span asp-validation-for="mail" class="text-danger"></span>
                </div>

                <!-- Teléfono -->
                <div class="form-group mb-3">
                    <label class="fw-bold">Número de Teléfono</label>
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <label for="CodigoArea" class="form-label small">Código de Área</label>
                            <input asp-for="CodigoArea" class="form-control" placeholder="XXX" />
                            <span asp-validation-for="CodigoArea" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-2">
                            <label for="Caracteristica" class="form-label small">Características</label>
                            <input asp-for="Caracteristica" class="form-control" placeholder="XXXX" />
                            <span asp-validation-for="Caracteristica" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label for="Numero" class="form-label small">Número</label>
                            <input asp-for="Numero" class="form-control" placeholder="XXXX" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Botón de envío -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>Registrar Afiliado
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Enlace para volver -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver a la lista
        </a>
    </div>
</div>
