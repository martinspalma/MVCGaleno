@model MVCGaleno.Models.Afiliado

@{
    ViewData["Title"] = "Crear Afiliado";
}

<div class="container mt-5">
    <!-- Título principal -->
    <h1 class="text-center text-primary mb-4">Registrar Nuevo Afiliado</h1>

    <!-- Breve descripción -->
    <p class="text-center text-muted">Complete los campos a continuación para agregar un nuevo afiliado al sistema.</p>
    <hr class="mb-5" />

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="card shadow p-4">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Nombre Completo -->
                <div class="form-group">
                    <label asp-for="NombreCompleto" class="control-label font-weight-bold"></label>
                    <input asp-for="NombreCompleto" class="form-control" placeholder="Ingrese el nombre completo" />
                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                </div>

                <!-- DNI -->
                <div class="form-group">
                    <label asp-for="Dni" class="control-label font-weight-bold"></label>
                    <input asp-for="Dni" class="form-control" placeholder="Ingrese el DNI" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>

                <!-- Tipo de Plan -->
                <div class="form-group">
                    <label asp-for="tipoPlan" class="control-label font-weight-bold"></label>
                    <select asp-for="tipoPlan" class="form-control" asp-items="Html.GetEnumSelectList<TipoPlan>()">
                        <option selected="selected" value="">Seleccione un tipo de plan</option>
                    </select>
                    <span asp-validation-for="tipoPlan" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label asp-for="mail" class="control-label font-weight-bold"></label>
                    <input asp-for="mail" class="form-control" placeholder="Ingrese el correo electrónico" />
                    <span asp-validation-for="mail" class="text-danger"></span>
                </div>

                <!-- Teléfono -->
                <div class="form-group">
                    <label asp-for="telefono" class="control-label font-weight-bold"></label>
                    <input asp-for="telefono" class="form-control" placeholder="Ingrese el número de teléfono" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>

                <!-- Botón de envío -->
                <div class="form-group text-center mt-4">
                    <input type="submit" value="Registrar Afiliado" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <!-- Enlace para volver -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-link">← Volver a la lista</a>
    </div>
</div>