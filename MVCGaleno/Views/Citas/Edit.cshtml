@model MVCGaleno.Models.Cita

@{
    ViewData["Title"] = "Editar Cita";
}

<div class="container mt-5">
    <!-- Título principal -->
    <h1 class="text-center text-primary mb-4">Editar Cita</h1>
    <hr />

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <form asp-action="Edit">
                    <!-- Resumen de validación -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

                    <!-- Campo de fecha -->
                    <div class="form-group mb-3">
                        <label asp-for="fechaCita" class="control-label">Fecha de la cita</label>
                        <input asp-for="fechaCita" class="form-control" type="datetime-local" />
                        <span asp-validation-for="fechaCita" class="text-danger"></span>
                    </div>

                    <!-- Campo de disponibilidad -->
                    <div class="form-group form-check mb-3">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="estaDisponible" />
                            @Html.DisplayNameFor(model => model.estaDisponible)
                        </label>
                    </div>

                    <!-- Campo de prestador médico -->
                    <div class="form-group mb-3">
                        <label asp-for="IdPrestador" class="control-label">Prestador Médico</label>
                        <select asp-for="IdPrestador" class="form-control" asp-items="ViewBag.IdPrestador">
                            <option value="">Seleccione un prestador</option>
                        </select>
                        <span asp-validation-for="IdPrestador" class="text-danger"></span>
                    </div>

                    <!-- Botón de guardar -->
                    <div class="form-group text-center mt-3">
                        <input type="submit" value="Guardar" class="btn btn-primary btn-lg" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Botones -->
    <div class="form-group text-center mt-4">
        <input type="submit" value="Guardar" class="btn btn-primary btn-lg rounded-pill px-4 py-2 me-3 shadow-sm" />
        <a asp-action="Index" class="btn btn-light btn-lg rounded-pill px-4 py-2 shadow-sm">Volver a la lista</a>
    </div>

</div>
