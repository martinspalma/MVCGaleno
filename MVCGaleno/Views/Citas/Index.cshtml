@model IEnumerable<MVCGaleno.Models.Cita>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <!-- Título -->
    <h1 class="text-center text-primary mb-4">Listado de Citas</h1>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-plus-circle"></i> Crear Nueva Cita
        </a>
    </div>
    <!-- Tabla -->
    <table class="table table-striped table-bordered table-hover shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Fecha</th>
                <th>Disponibilidad</th>
                <th>Prestador Medico</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.fechaCita)</td>
                    <td>@Html.DisplayFor(modelItem => item.estaDisponible)</td>
                    <td>Sr/a. @Html.DisplayFor(modelItem => item.PrestadorMedico.NombreCompleto)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.IdCita" class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdCita" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

