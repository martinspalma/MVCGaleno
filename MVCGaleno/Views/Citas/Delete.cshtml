@model MVCGaleno.Models.Cita

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <!-- Título -->
    <h1 class="text-center text-danger mb-4">Eliminar Cita</h1>

    <!-- Mensaje de confirmación -->
    <h3 class="text-center text-warning">¿Estás seguro de que deseas eliminar esta cita?</h3>
    <p class="text-center text-muted">Esta acción no se puede deshacer.</p>
    <hr />

    <!-- Detalles de la cita -->
    <div class="card shadow p-4 mb-4">
        <h4 class="text-primary">Detalles de la Cita</h4>
        <dl class="row mt-3">
            <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.fechaCita)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.fechaCita)</dd>

            <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.estaDisponible)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.estaDisponible)</dd>

            <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(model => model.PrestadorMedico)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PrestadorMedico.IdPrestador)</dd>

        </dl>
    </div>
    <!-- Botones de acción -->
    <div class="text-center">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="IdCita" />
            <button type="submit" class="btn btn-danger btn-sm me-3">
                <i class="bi bi-trash3"></i> Eliminar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
</div>
