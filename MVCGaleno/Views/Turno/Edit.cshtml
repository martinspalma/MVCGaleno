@model MVCGaleno.Models.Turno

@{
    ViewData["Title"] = "Editar Turno";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Card para editar el turno -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center">Editar Turno</h5>
                    <hr />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="IdTurno" />

                        <!-- Especialidad -->
                        <div class="form-group">
                            <label asp-for="Especialidad" class="control-label"></label>
                            <select asp-for="Especialidad" class="form-control">
                                <option value="">Selecciona una especialidad</option>
                                <!-- Aquí se pueden cargar las opciones de especialidades -->
                            </select>
                            <span asp-validation-for="Especialidad" class="text-danger"></span>
                        </div>

                        <!-- Fecha de Cita -->
                        <div class="form-group">
                            <label asp-for="fechaCita" class="control-label"></label>
                            <input asp-for="fechaCita" class="form-control" type="datetime-local" />
                            <span asp-validation-for="fechaCita" class="text-danger"></span>
                        </div>

                        <!-- Botón de guardar -->
                        <div class="form-group mt-3">
                            <input type="submit" value="Guardar" class="btn btn-success w-100" />
                        </div>
                    </form>
                </div>
            </div>

            <!-- Botón para volver a la lista -->
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
