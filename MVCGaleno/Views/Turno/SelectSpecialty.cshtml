@model IEnumerable<MVCGaleno.Models.Especialidad>
@{
    ViewData["Title"] = "Selecciona Especialidad";
}

<div class="container mt-5">
    <!-- Título -->
    <h1 class="text-center text-primary mb-4">Seleccionar Especialidad</h1>

    <!-- Formulario en Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="SelectSpecialty" method="post">
                <!-- Especialidad -->
                <div class="mb-4">
                    <label for="especialidad" class="form-label fw-bold">Especialidad</label>
                    <select id="especialidad" name="especialidad" class="form-select" aria-label="Seleccionar especialidad" required>
                        <option value="" disabled selected>Selecciona una especialidad</option>
                        @foreach (var specialty in Model)
                        {
                            <option value="@specialty">@specialty</option>
                        }
                    </select>
                    <div class="form-text text-danger" id="error-message" style="display:none;">
                        Por favor, selecciona una especialidad válida.
                    </div>
                </div>

                <!-- Botón de Envío -->
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-arrow-right-circle"></i> Siguiente
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Script de validación opcional -->
@section Scripts {
    <script>
        document.querySelector("form").addEventListener("submit", function (event) {
            const selectElement = document.getElementById("especialidad");
            const errorMessage = document.getElementById("error-message");

            if (!selectElement.value) {
                errorMessage.style.display = "block";
                event.preventDefault();
            } else {
                errorMessage.style.display = "none";
            }
        });
    </script>
}
