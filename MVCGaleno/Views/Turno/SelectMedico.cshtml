@model IEnumerable<MVCGaleno.Models.PrestadorMedico>
@{
    ViewData["Title"] = "Seleccionar Médico";
}

<div class="container mt-5">
    <!-- Título -->
    <h1 class="text-center text-primary mb-4">Seleccionar Médico</h1>

    <!-- Formulario en Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="SelectMedico" method="post">
                <!-- Médico -->
                <div class="mb-4">
                    <label for="idPrestador" class="form-label fw-bold">Médico</label>
                    <select id="idPrestador" name="idPrestador" class="form-select" aria-label="Seleccionar médico" required>
                        <option value="" disabled selected>Selecciona un médico</option>
                        @foreach (var medico in Model)
                        {
                            <option value="@medico.IdPrestador">@medico.NombreCompleto</option>
                        }
                    </select>
                    <div class="form-text text-danger" id="error-message" style="display:none;">
                        Por favor, selecciona un médico válido.
                    </div>
                </div>

                <!-- Botón de Envío -->
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-arrow-right-circle"></i> Siguiente
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Script de validación opcional -->
@section Scripts {
    <script>
        document.querySelector("form").addEventListener("submit", function (event) {
            const selectElement = document.getElementById("idPrestador");
            const errorMessage = document.getElementById("error-message");

            if (!selectElement.value) {
                errorMessage.style.display = "block";
                event.preventDefault();
            } else {
                errorMessage.style.display = "none";
            }
        });
    </script>
}
