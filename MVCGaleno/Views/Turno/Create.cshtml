@model MVCGaleno.Models.TurnoViewModel

@{
    ViewData["Title"] = "Crear Turno";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Crear Turno</h2>

    <form asp-action="Create2" class="shadow-sm p-4 rounded bg-light">

        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>


        <div class="mb-3">
            <input asp-for="IdCita" type="hidden" />
            <input asp-for="IdAfiliado" type="hidden" />
            <input asp-for="IdPrestador" type="hidden" />
            <input asp-for="NombreAfiliado" type="hidden" />
            <input asp-for="NombrePrestador" type="hidden" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Afiliado</label>
            <input type="text" class="form-control" value="@Model.NombreAfiliado" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Prestador</label>
            <input type="text" class="form-control" value="@Model.NombrePrestador" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Especialidad" class="form-label fw-bold">Especialidad</label>
            <input asp-for="Especialidad" class="form-control" readonly />
            <span asp-validation-for="Especialidad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FechaCita" class="form-label fw-bold">Fecha de Cita</label>
            <input asp-for="FechaCita" class="form-control" readonly />
            <span asp-validation-for="FechaCita" class="text-danger"></span>
        </div>

        <div class="text-end mt-4">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </form>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
    </div>
</div>