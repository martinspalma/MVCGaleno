@model MVCGaleno.Models.TurnoViewModel

@{
    ViewData["Title"] = "Crear Turno";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create2">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Campo IdAfiliado -->
                        <div class="mb-3">
                            <label asp-for="IdAfiliado" class="form-label">ID Afiliado</label>
                            <input asp-for="IdAfiliado" class="form-control" readonly />
                        </div>

                        <!-- Campo IdPrestador -->
                        <div class="mb-3">
                            <label asp-for="IdPrestador" class="form-label">ID Prestador</label>
                            <input asp-for="IdPrestador" class="form-control" readonly />
                        </div>

                        <!-- Campo Especialidad -->
                        <div class="mb-3">
                            <label asp-for="Especialidad" class="form-label">Especialidad</label>
                            <input asp-for="Especialidad" class="form-control" readonly />
                        </div>

                        <!-- Campo FechaCita -->
                        <div class="mb-3">
                            <label asp-for="FechaCita" class="form-label">Fecha de la Cita</label>
                            <input asp-for="FechaCita" class="form-control" readonly />
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Volver</a>
                            <button type="submit" class="btn btn-primary">Crear</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
