@model IEnumerable<MVCGaleno.Models.Cita>

@{
    ViewData["Title"] = "Seleccionar Cita";
}

<div class="container mt-5">
    <!-- Título -->
    <h1 class="text-center text-primary mb-4">Seleccionar Cita</h1>

    <!-- Formulario en Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="SelectCita2" method="post">
                <!-- Selección de Cita -->
                <div class="mb-4">
                    <label for="idCita" class="form-label fw-bold">Cita</label>
                    <select id="idCita" name="idCita" class="form-select" aria-label="Seleccionar cita" required>
                        <option value="" disabled selected>Selecciona una cita</option>
                        @foreach (var cita in Model)
                        {
                            <option value="@cita.IdCita">@cita.fechaCita.ToString("dd/MM/yyyy HH:mm")</option>
                        }
                    </select>
                    <div class="form-text text-danger" id="error-message" style="display:none;">
                        Por favor, selecciona una cita válida.
                    </div>
                </div>

                <!-- Botón de Envío -->
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-arrow-right-circle"></i> Siguiente
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Script de validación opcional -->
@section Scripts {
    <script>
        document.querySelector("form").addEventListener("submit", function (event) {
            const selectElement = document.getElementById("idCita");
            const errorMessage = document.getElementById("error-message");

            if (!selectElement.value) {
                errorMessage.style.display = "block";
                event.preventDefault();
            } else {
                errorMessage.style.display = "none";
            }
        });
    </script>
}
