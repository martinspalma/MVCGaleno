@model IEnumerable<MVCGaleno.Models.Turno>

@{
    ViewData["Title"] = "Turnos";
}
<div class="container mt-5">
    <!-- Título de la página -->
    <h1 class="text-center text-primary mb-4">
        <i class="fas fa-users me-2"></i>Listado de Turnos
    </h1>

    <!-- Botón para crear nuevo Turno -->
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-user-plus me-2"></i>Nuevo Turno
        </a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Especialidad)</th>
                <th>@Html.DisplayNameFor(model => model.PrestadorMedico)</th>
                <th>@Html.DisplayNameFor(model => model.Afiliado)</th>
                <th>@Html.DisplayNameFor(model => model.fechaCita)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Especialidad)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrestadorMedico)</td>
                    <td>@Html.DisplayFor(modelItem => item.Afiliado)</td>
                    <td>@Html.DisplayFor(modelItem => item.fechaCita)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdTurno" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdTurno" class="btn btn-info btn-sm">
                            <i class="fas fa-info-circle"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdTurno" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <!-- FontAwesome para iconos -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
}