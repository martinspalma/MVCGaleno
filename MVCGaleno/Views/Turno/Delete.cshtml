@model MVCGaleno.Models.Turno

@{
    ViewData["Title"] = "Eliminar Turno";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-center">¿Estás seguro de que quieres eliminar este turno?</h5>
                    <h4 class="mt-4">Detalles del Turno</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Especialidad</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Especialidad)</dd>

                        <dt class="col-sm-4">Fecha de la Cita</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.fechaCita)</dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <!-- Botón de Confirmación -->
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="IdTurno" />
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>

                        <!-- Botón de Volver -->
                        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
